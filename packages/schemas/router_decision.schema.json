{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "router_decision.schema.json",
  "title": "RouterDecision",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "intent",
    "confidence",
    "need_clarification",
    "clarify_question",
    "reply_to_user",
    "tool_calls",
    "cards"
  ],
  "properties": {
    "intent": {
      "type": "string",
      "enum": ["expense", "task", "mood", "lifelog", "meal", "query", "multi_event", "unknown"]
    },
    "confidence": {"type": "number", "minimum": 0, "maximum": 1},
    "need_clarification": {"type": "boolean"},
    "clarify_question": {"type": ["string", "null"]},
    "reply_to_user": {"type": ["string", "null"]},
    "tool_calls": {
      "type": "array",
      "items": {"$ref": "tool_call.schema.json"}
    },
    "cards": {
      "type": "array",
      "items": {"$ref": "card.schema.json"}
    }
  }
}

