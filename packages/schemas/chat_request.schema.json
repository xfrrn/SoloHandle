{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "chat_request.schema.json",
  "title": "ChatRequest",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "text": {"type": "string"},
    "confirm_draft_ids": {"type": "array", "items": {"type": "string"}, "minItems": 1},
    "undo_token": {"type": "string"},
    "request_id": {"type": "string"}
  },
  "anyOf": [
    {"required": ["text"]},
    {"required": ["confirm_draft_ids"]},
    {"required": ["undo_token"]}
  ]
}
